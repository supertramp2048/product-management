extends ../../layouts/default.pug

block main
  div(class="container mx-auto p-6")
    h1(class="text-2xl font-bold text-gray-800 mb-6") Create New Product
    
    form(
        class="bg-white shadow-md rounded-lg p-6"
        action=`${prefixAdmin}/products/createNewProduct`
        method="POST"
        id="form-create-product"
    )
      table(class="w-full table-auto")
        tbody
          tr
            td(class="w-1/3 font-semibold text-gray-700 py-3") 
              label(for="title") Title *
            td(class="py-3") 
              input(
                type="text" 
                id="title" 
                name="title" 
                required
                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                placeholder="Enter product title"
              )
          tr
            td(class="font-semibold text-gray-700 py-3")
              label(for="thumbnail") Thumbnail
            td(class="py-3")
              input(
                type="text" 
                id="thumbnail" 
                name="thumbnail" 
                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                placeholder="Enter image URL"
              )
          tr
            td(class="font-semibold text-gray-700 py-3")
              label(for="deleted") Deleted in client
            td(class="py-3")
              select(
                name="deleted" 
                id="deleted" 
                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              )
                option(value="false" selected) False
                option(value="true") True
          tr
            td(class="font-semibold text-gray-700 py-3")
              label(for="status") Status *
            td(class="py-3")
              select(
                name="status" 
                id="status" 
                required
                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              )
                option(value="active" selected) Active
                option(value="inactive") Inactive
          tr
            td(class="font-semibold text-gray-700 py-3") 
              label(for="price") Price *
            td(class="py-3") 
              input(
                type="number" 
                id="price" 
                name="price" 
                required
                min="0"
                step="0.01"
                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                placeholder="0.00"
              )
          tr
            td(class="font-semibold text-gray-700 py-3") 
              label(for="position") Position
            td(class="py-3") 
              input(
                type="number" 
                min="1" 
                id="position" 
                name="position" 
                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                placeholder="1"
              )
          tr
            td(colspan="2" class="pt-6 text-right")
              button(
                type="button" 
                class="mr-3 px-4 py-2 text-gray-600 border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-500"
                onclick="window.history.back()"
              ) Cancel
              button(
                type="submit" 
                class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 disabled:opacity-50"
                id="submit-btn"
              ) Create Product