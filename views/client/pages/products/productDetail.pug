extends ../../layouts/default.pug

block main
  div(class="min-h-screen bg-gray-50 py-8")
    div(class="max-w-6xl mx-auto p-6 bg-white rounded-xl shadow-lg border border-gray-200")
      
      h1(class="text-3xl sm:text-4xl font-bold mb-8 text-center text-gray-800 border-b border-gray-200 pb-6")
        | Chi tiết sản phẩm

      // Layout chính: ảnh + thông tin
      div(class="flex flex-col lg:flex-row gap-12 items-start")
        
        // Hình ảnh sản phẩm
        div(class="w-full lg:w-[450px] flex justify-center")
          img(
            src=product.thumbnail 
            class="rounded-xl border-2 border-gray-300 shadow-lg w-full max-w-[400px] h-auto object-cover hover:shadow-xl transition-shadow duration-300" 
            alt="Hình sản phẩm"
          )

        // Nội dung chi tiết
        div(class="flex-1 space-y-8")
          
          h2(class="text-3xl font-bold text-pink-600 mb-4")
            | #{product.title}

          p(class="text-gray-700 leading-relaxed text-lg bg-gray-50 p-6 rounded-lg border-l-4 border-pink-500")
            | #{product.description}

          div(class="grid grid-cols-1 sm:grid-cols-2 gap-8 pt-6")
            
            // Discount info
            div(class="bg-gradient-to-br from-orange-50 to-red-50 p-6 rounded-xl border border-orange-200 text-center")
              p(class="mb-2")
                span(class="font-bold text-gray-800 text-lg block mb-2") Discount:
                span(class="text-4xl font-bold text-orange-600") #{product.discountPercentage}%
            
            // Stock info  
            div(class="bg-gradient-to-br from-green-50 to-emerald-50 p-6 rounded-xl border border-green-200 text-center")
              p(class="mb-2")
                span(class="font-bold text-gray-800 text-lg block mb-2") Còn trong kho:
                span(class="text-4xl font-bold text-green-600") #{product.stock}